    <%= simple_form_for @product do |f| %>
    <%= f.input :title, placeholder: "Title" %>
    <%= f.input :description, placeholder: "Describe your product" %>
    <%= f.input :category, placeholder: "Category" %>
    <%= f.input :quality, placeholder: "Quality" %>
    <%= f.input :address,input_html: {data: {address_autocomplete_target: "address"}},
                  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, class: "d-none" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
